<?xml version="1.0" encoding="UTF-8"?> 
<databaseChangeLog 
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"> 
  <changeSet author="pwadmore" id="changelog-copy-data-to-datetimeoffset-staging-exception-table">
    <preConditions onFail="HALT">
      <sqlCheck expectedResult="0">SELECT COUNT(*) FROM ${fffsWebPortalStagingDbStagingSchema}.STAGING_EXCEPTION</sqlCheck>
    </preConditions>
	  <sql>
      INSERT INTO ${fffsWebPortalStagingDbStagingSchema}.STAGING_EXCEPTION
        SELECT
          id,
          payload,
          description,
          exception_time at time zone 'UTC'
        FROM
          ${fffsWebPortalStagingDbStagingSchema}.DATETIME2_STAGING_EXCEPTION
    </sql>
	  <rollback>
		  <sql>
        DELETE FROM ${fffsWebPortalStagingDbStagingSchema}.STAGING_EXCEPTION
      </sql>
	  </rollback>
  </changeSet>
</databaseChangeLog> 
