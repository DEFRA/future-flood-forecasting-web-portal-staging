<?xml version="1.0" encoding="UTF-8"?> 
<databaseChangeLog 
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"> 
  <changeSet author="pwadmore" id="changelog-copy-data-to-datetimeoffset-timeseries-header-table">
    <preConditions onFail="HALT">
      <sqlCheck expectedResult="0">SELECT COUNT(*) FROM ${fffsWebPortalStagingDbStagingSchema}.TIMESERIES_HEADER</sqlCheck>
    </preConditions>
	  <sql>
      INSERT INTO ${fffsWebPortalStagingDbStagingSchema}.TIMESERIES_HEADER
        SELECT
          id,
          start_time at time zone 'UTC',
          end_time at time zone 'UTC',
          import_time at time zone 'UTC',
          task_completion_time at time zone 'UTC',
          task_id,
          workflow_id
        FROM
          ${fffsWebPortalStagingDbStagingSchema}.DATETIME2_TIMESERIES_HEADER
    </sql>
	  <rollback>
		  <sql>
        DELETE FROM ${fffsWebPortalStagingDbStagingSchema}.TIMESERIES_HEADER
      </sql>
	  </rollback>
  </changeSet>
</databaseChangeLog> 
